<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/BotImage"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"


        />
    <TextView
        android:id="@+id/botName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/BotImage"
        android:text="Health bot"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:fontFamily="@font/omegle"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:layout_toEndOf="@id/BotImage"
        android:layout_below="@id/botName"
        android:text="Created:Feb 9 2023"
        android:textStyle="italic"
        android:fontFamily="@font/handpackscript"

        />

</RelativeLayout>